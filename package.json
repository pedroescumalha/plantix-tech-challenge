{
  "name": "plantix-tech-challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/pedroescumalha/plantix-tech-challenge.git",
  "author": "Pedro Escumalha <pedrosimoes93@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.56.0",
    "globstar": "^1.0.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "setup": "yarn install && yarn build && npx prisma generate",
    "create:migration": "npx prisma migrate dev --create-only",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --ignore 'src/**/*.spec.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node src/index.ts'",
    "lint": "npx prisma validate && eslint ./src",
    "lint:fix": "npx prisma format && eslint ./src --fix",
    "test": "globstar -- node --test --require ts-node/register ./src/**/*.test.ts"
  },
  "dependencies": {
    "@prisma/client": "5.14.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "prisma": "^5.14.0",
    "sqlite3": "^5.1.7",
    "zod": "^3.23.8"
  }
}
